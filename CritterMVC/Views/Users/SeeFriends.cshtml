@model System.Collections.Generic.ICollection<Critter.Models.User>
           <h1>Friend list</h1>
<br/>

@if (Model.Count == 0)
{
    <h1>You have no friends :( </h1>
    <h2>Go to <strong>@Html.ActionLink("The Crits", "Index", "Crits")</strong> section and start adding people.</h2>
}

@foreach (var friend in @Model)
{
    <hr/>
    <div style="width: 100px" >
        <a href="@Url.Action("Info", "Users", new { username = @friend.UserName })">
            <img src="@Url.Content(@friend.AvatarUrl)" alt="No avatar" width="100" img class="avatar" />
            <h4>@friend.UserName</h4>
        </a>
    </div>
    <p>@Html.ActionLink("Sack friend", "RemoveFriend", "Users", new {friendname = @friend.UserName}, null)</p>
}